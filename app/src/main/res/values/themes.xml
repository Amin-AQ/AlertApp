<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlertApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E80000</item>
        <item name="colorPrimaryVariant">#FF7A7A</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E67C7C</item>
        <item name="colorSecondaryVariant">#E67C7C</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDatePicker">
        <!-- Text color -->
        <item name="android:textColorPrimary">#989898</item>
        <!-- Divider color -->
        <item name="colorControlNormal">#FF7A7A</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#F6E5E5</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FragmentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#F6E5E5</item>
        <item name="android:textColor">#2B2A2A</item>
        <item name="android:buttonTint">#2B2A2A</item>
        <item name="android:textColorHint">#4A4A4A</item>
    </style>

    <style name="Theme.AlertApp.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.AlertApp.AppWidgetContainer" parent="Theme.AlertApp.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

</resources>
