<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlertApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:backgroundTint">#222121</item>
        <item name="colorPrimary">#FF7A7A</item>
        <item name="colorPrimaryVariant">#E80000</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E67C7C</item>
        <item name="colorSecondaryVariant">#E67C7C</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#3E3E3E</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyDatePicker" >
        <!-- Text color -->
        <item name="android:textColorPrimary">#989898</item>
        <!-- Divider color -->
        <item name="colorControlNormal">#FF7A7A</item>
    </style>

    <style name="FragmentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#3E3E3E</item>
        <item name="android:textColor">#A5A4A4</item>
        <item name="android:buttonTint">#A5A4A4</item>
    </style>

</resources>
