<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alertcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_below="@id/postText"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:theme="@style/FragmentTheme">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <TextView
            android:id="@+id/alertid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:hint="Faizan Subhani"
            android:padding="5dp"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/alertuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alertid"
            android:layout_alignParentStart="true"
            android:hint="Faizan Subhani"
            android:padding="5dp"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/alerttype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:hint="Faizan Subhani"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/alertText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alertuser"
            android:padding="10dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/click_to_view_details"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>